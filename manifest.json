{
  "manifest_version": 3,
  "name": "PCA Untreated Reminder",
  "version": "1.0.4",
  "description": "Forces an acknowledgment after 4pm if _UNTREATED emails remain.",
  "permissions": ["identity", "storage", "tabs", "scripting", "alarms"],
  "icons": {
    "16": "pca_cropped_logo.png",
    "32": "pca_cropped_logo.png",
    "48": "pca_cropped_logo.png",
    "128": "pca_cropped_logo.png"
  },
  "host_permissions": ["https://mail.google.com/*", "https://www.googleapis.com/*"],
  "oauth2": {
    "client_id": "554448492971-p007qepsor7eecdk8n3dlaijhcpbfind.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/gmail.readonly"]
  },
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "PCA Untreated Reminder â€“ Force check",
    "default_icon": {
      "16": "pca_cropped_logo.png",
      "32": "pca_cropped_logo.png"
    }
  }
}