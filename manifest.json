{
  "manifest_version": 3,
  "name": "PCA Untreated Reminder",
  "version": "0.2.0",
  "description": "Forces an acknowledgment after 4pm if _UNTREATED emails remain.",
  "permissions": ["identity", "storage", "tabs", "scripting", "alarms"],
  "host_permissions": ["https://mail.google.com/*", "https://www.googleapis.com/*"],
  "oauth2": {
    "client_id": "554448492971-7tbiir65vbp7g87qcltn9b9o87v71uqe.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/gmail.readonly"]
  },
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": { "default_title": "PCA Untreated Reminder â€“ Force check" }
}